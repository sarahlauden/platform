<%# coding: UTF-8 -%>

<head>
  <%= stylesheet_link_tag 'cas/login' %>
</head>
<%= render "header" %>
<div class="plank plain-md" style="min-height: 700px; padding-top: 32px;">
  <div class="section-container">
    <section>
      <div class="col-md-4 col-md-offset-4">
        <h2>Platform Login</h2>
        <% if @message %>
          <p><%= @message[:message] %></p>
        <% end %>

        <% if request.cookies["login_flash"] %>
        <p><%= request.cookies["login_flash"] %></p>
        <%
          response.set_cookie("login_flash", {
            :value => '',
            :expires => Time.now,
            :domain => @settings[:cookie_domain]
          })
        %>
        <% end %>
        <%= render "login_form" %>

        <br />

        <a href="//<%= @settings[:public_site_domain] %>/signup/new">Sign up</a><br />
        <a href="//<%= @settings[:public_site_domain] %>/users/password/new">Forgot your password?</a><br />
        <a href="//<%= @settings[:public_site_domain] %>/users/confirmation/new">Didn&#39;t receive confirmation instructions?</a><br />
      </div>
    </section>
  </div>
</div>
<%= render "footer" %>